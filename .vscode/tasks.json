{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "open with Aseprite",
      "type": "shell",
      "command": "aseprite ${file}",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "Export to .png from Aseprite",
      "type": "shell",
      "command": "aseprite --batch ${file} --sheet ${relativeFileDirname}/${fileBasenameNoExtension}.png",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    }
  ]
}
